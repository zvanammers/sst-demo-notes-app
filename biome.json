{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": ["dist/**", ".vscode/**", "node_modules"]
	},
	"formatter": {
		"indentWidth": 2,
		"indentStyle":"tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
